<div class="oneMusic-pagination-area wow fadeInUp" data-wow-delay="300ms">
    <% if (total > 0) { %>
        <nav>
            <ul class="pagination">
                <!--<% if (curr == 1) { %>-->
                    <!--<li class="page-item disabled"><a>First</a></li>-->
                <!--<% } else { %>-->
                    <!--<li class="page-item"><a href="/products/1">First</a></li>-->
                <!--<% } %>-->
                <% var i = (Number(curr) > 5 ? Number(curr) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a>...</a></li>
                <% } %>
                <% for (; i <= (Number(curr) + 4) && i <= total; i++) { %>
                    <% if (i == curr) { %>
                        <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/browse/album?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(curr) + 4 && i < total) { %>
                        <li class="page-item disabled"><a>...</a></li>
                    <% } %>
                <% } %>
                <!--<% if (curr == total) { %>-->
                    <!--<li class="page-item disabled"><a>Last</a></li>-->
                <!--<% } else { %>-->
                    <!--<li class="page-item"><a href="/products/<%= total %>">Last</a></li>-->
                <!--<% } %>-->
            </ul>
        </nav>
    <% } %>

</div>
