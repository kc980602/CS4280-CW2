<!DOCTYPE html>
<html>
<head>
    <head>
        <% include ./app/head.ejs %>
    </head>
</head>
<body>
<!-- ##### Header Area Start ##### -->
<% include ./app/header.ejs %>
<!-- ##### Header Area End ##### -->

<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/img/bg-img/breadcumb3.jpg); max-height: 200px">
    <div class="bradcumbContent">
        <h2>Cart</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Cart Area Start ##### -->
<section class="cart-area padding-y-20 padding-y-md-50">
    <div class="container">
        <div class="row">

            <div class="col-12 section-heading text-left mb-50 wow fadeInUp" data-wow-delay="50ms">
                <div class="d-flex justify-content-between">
                    <div>
                        <p>See whatâ€™s here</p>
                        <h2>10 Albums In Cart</h2>
                    </div>
                    <a href="#" class="btn oneMusic-btn btn-2 m-2">Checkout</a>
                </div>

            </div>

            <% for(var i = 0; i < 10; i++) { %>
                <!-- A Album Item -->
                <div class="col-12 mb-3">
                    <div class="new-hits-area padding-30">
                        <div class="single-new-item align-items-center wow fadeInUp" data-wow-delay="100ms">
                            <div class="d-flex justify-content-between">
                                <div class="first-part d-flex align-items-center">
                                    <div class="thumbnail">
                                        <img src="<%= `/img/bg-img/a${Math.floor(Math.random() * (+12 - +1)) + +1}.jpg` %>" alt="">
                                    </div>
                                    <div class="content-">
                                        <h6>Underground</h6>
                                        <p>Sam Smith</p>
                                        <p>12 Songs</p>
                                    </div>
                                </div>
                                <div>
                                    <p class="font-size-20 font-weight-bold">$0.90</p>
                                </div>
                            </div>

                            <table class="table table-cs mt-3 mb-0" width="100%">
                                <thead>
                                <tr style="height: 1px">
                                    <th style="width: 5%;"></th>
                                    <th style="width: 70%;"></th>
                                    <th style="width: 10%;"></th>
                                    <th style="width: 10%;"></th>
                                    <th style="width: 5%;"></th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var j = 0; j < 5; j++) { %>
                                    <tr>
                                        <td><i class="icon-music"></i></td>
                                        <td>Stars Stars Stars Stars</td>
                                        <td>2:34</td>
                                        <td>$9.99</td>
                                        <td class="text-right"><a href="" class="font-size-14 font-weight-light">Remove</a></td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>
<!-- ##### Carts Area End ##### -->

<% include ./app/footer.ejs %>
</body>
</html>
